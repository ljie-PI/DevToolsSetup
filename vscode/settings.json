{
  "workbench.colorTheme": "Dracula Theme",
  "workbench.tree.indent": 20,

  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.rulers": [120],
  "editor.formatOnSave": false,
  "editor.fontFamily": "'SauceCodePro NF', 'FiraCode Nerd Font', 'Hack Nerd Font', 'SpaceMono Nerd Font'",
  "editor.accessibilitySupport": "off",

  "diffEditor.ignoreTrimWhitespace": false,

  "terminal.integrated.fontFamily": "'SauceCodePro NF', 'FiraCode Nerd Font', 'Hack Nerd Font', 'SpaceMono Nerd Font'",

  "security.workspace.trust.untrustedFiles": "open",

  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "*.grd": "xml",
    "*.gni": "gn",
    "*.gn": "gn",
    "*.spec": "gn",
    "*.typemap": "gn"
  },
  "files.exclude": {
    "**/.idea": true,
    "**/.project": true,
    "**/.tags": true,
    "**/build": true,
    "**/data": true,
    "**/log": true,
    "**/logs": true,
    "out*/**": true,
    "out/[^D]*": true
  },
  "files.watcherExclude": {
    "**/.idea": true,
    "**/.project": true,
    "**/.tags": true,
    "**/build": true,
    "**/data": true,
    "**/log": true,
    "**/logs": true,
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true,
    "**/out*/**": true,
    "**/third_party/**": true
  },

  "git.ignoreLegacyWarning": true,
  "git.openRepositoryInParentFolders": "never",

  "vim.leader": " ",
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,

  "playwright.showTrace": false,
  "playwright.reuseBrowser": true,

  "markdown.preview.fontSize": 13,

  "remote.SSH.remotePlatform": {
    "devbox.lab440.tech": "linux"
  },

  "[python]": {
    "editor.formatOnType": true
  },
  "[java]": {
    "editor.rulers": [100],
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
